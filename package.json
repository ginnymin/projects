{
  "name": "projects",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/favorite-dogs-matcher",
    "apps/multifilterinput",
    "apps/rest-countries-switcher",
    "apps/rock-paper-scissors",
    "apps/smoothie-recipebook"
  ],
  "scripts": {
    "build:scripts": "tsc --project scripts/tsconfig.scripts.json",
    "generate:app": "yarn build:scripts && node scripts/generate-app/generate.js",
    "generate:component": "yarn build:scripts && node scripts/generate-component/generate.js",
    "build": "yarn workspaces run build",
    "lint": "yarn lint:root && yarn workspaces run lint --quiet",
    "lint:root": "tsc && eslint './*.{js,mjs,ts}'",
    "test": "yarn workspaces run test --silent",
    "dev:countries": "yarn workspace rest-countries-switcher dev",
    "dev:dogs": "yarn workspace favorite-dogs-matcher dev",
    "dev:rock": "yarn workspace rock-paper-scissors dev",
    "dev:smoothies": "yarn workspace smoothie-recipebook dev"
  },
  "dependencies": {
    "@headlessui/react": "2.2.8",
    "clsx": "2.1.1",
    "next": "15.5.3",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-icons": "5.5.0",
    "sass": "1.93.0"
  },
  "devDependencies": {
    "@eslint/compat": "1.4.0",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.36.0",
    "@tailwindcss/postcss": "4.1.13",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/eslint__eslintrc": "3.3.0",
    "@types/eslint__js": "9.14.0",
    "@types/node": "24.5.2",
    "@types/prompts": "2.4.9",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-react": "5.0.3",
    "eslint": "9.36.0",
    "eslint-config-next": "15.5.3",
    "eslint-config-prettier": "10.1.8",
    "globals": "16.4.0",
    "jsdom": "27.0.0",
    "postcss": "8.5.6",
    "prompts": "2.4.2",
    "tailwindcss": "4.1.13",
    "typescript": "5.9.2",
    "typescript-eslint": "8.44.1",
    "vite": "7.1.7",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  }
}
