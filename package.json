{
  "name": "projects",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/favorite-dogs-matcher",
    "apps/multifilterinput",
    "apps/rest-countries-switcher",
    "apps/rock-paper-scissors",
    "apps/smoothie-recipebook"
  ],
  "scripts": {
    "build:scripts": "tsc --project scripts/tsconfig.scripts.json",
    "generate:app": "yarn build:scripts && node scripts/generate-app/generate.js",
    "generate:component": "yarn build:scripts && node scripts/generate-component/generate.js",
    "build": "yarn workspaces run build",
    "lint": "yarn lint:root && yarn workspaces run lint --quiet",
    "lint:root": "tsc && eslint './*.{js,mjs,ts}'",
    "test": "yarn workspaces run test --silent",
    "dev:countries": "yarn workspace rest-countries-switcher dev",
    "dev:dogs": "yarn workspace favorite-dogs-matcher dev",
    "dev:rock": "yarn workspace rock-paper-scissors dev",
    "dev:smoothies": "yarn workspace smoothie-recipebook dev"
  },
  "dependencies": {
    "@headlessui/react": "2.2.0",
    "clsx": "2.1.1",
    "next": "15.1.7",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-icons": "5.4.0",
    "sass": "1.84.0"
  },
  "devDependencies": {
    "@eslint/compat": "1.2.6",
    "@eslint/eslintrc": "3.2.0",
    "@eslint/js": "9.20.0",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.2.0",
    "@testing-library/user-event": "14.6.1",
    "@types/eslint__eslintrc": "2.1.2",
    "@types/eslint__js": "8.42.3",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/node": "22.13.1",
    "@types/prompts": "2.4.9",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "@vitejs/plugin-react": "4.3.4",
    "autoprefixer": "10.4.20",
    "eslint": "9.20.1",
    "eslint-config-next": "15.1.7",
    "eslint-config-prettier": "10.0.1",
    "globals": "15.15.0",
    "jsdom": "26.0.0",
    "postcss": "8.5.2",
    "prompts": "2.4.2",
    "tailwindcss": "3.4.17",
    "typescript": "5.7.3",
    "typescript-eslint": "8.24.0",
    "vite": "6.1.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.0.5"
  }
}
